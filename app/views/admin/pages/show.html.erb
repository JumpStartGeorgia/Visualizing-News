<%- model_class = Page -%>
<%- model_class_trans = PageTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<p><strong><%= model_class.human_attribute_name(:name) %>:</strong>
<%= @page.name %></p>
<p><strong><%= model_class_trans.human_attribute_name(:title) %>:</strong>
<%= @page.title %></p>
<p><strong><%= model_class_trans.human_attribute_name(:description) %>:</strong></p>
<%= simple_format @page.description %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_pages_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_page_path(@page), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_page_path(@page),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn' %>
</div>
