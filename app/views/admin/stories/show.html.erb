<%- model_class = Story -%>
<%- model_class_trans = StoryTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

  <p><strong><%= model_class_trans.human_attribute_name(:title) %>:</strong>
  <%= @story.title %></p>
  <p><strong><%= model_class.human_attribute_name(:published_date) %>:</strong>
  <%= @story.published_date %></p>
  <p><strong><%= model_class.human_attribute_name(:published) %>:</strong>
  <%= @story.published %></p>
  <p><strong><%= model_class.human_attribute_name(:story_type) %>:</strong>
  <%= @story.story_type.name %></p>
  <p><strong><%= model_class_trans.human_attribute_name(:explanation) %>:</strong></p>
  <%= simple_format @story.explanation %>
  <p><strong><%= model_class_trans.human_attribute_name(:reporter) %>:</strong>
  <%= @story.reporter %></p>
  <p><strong><%= model_class_trans.human_attribute_name(:designer) %>:</strong>
  <%= @story.designer %></p>
  <p><strong><%= model_class_trans.human_attribute_name(:data_source_name) %>:</strong>
  <%= @story.data_source_name %></p>
  <p><strong><%= model_class.human_attribute_name(:data_source_url) %>:</strong>
  <%= link_to @story.data_source_url, @story.data_source_url if @story.data_source_url %></p>
  <p><strong><%= model_class.human_attribute_name(:dataset) %>:</strong>
  <%= link_to @story.dataset.url if @story.dataset_file_name %></p>
  <p><strong><%= model_class.human_attribute_name(:visual) %>:</strong>
	<%= image_tag @story.visual.url(:thumb) if @story.visual_file_name %></p>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_stories_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_story_path(@story), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_story_path(@story),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
</div>
