<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

		<meta property="og:title" content="<%= content_for?(:title) ? "#{yield(:title)} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %>" />
		<meta property="og:type" content="non_profit" />
		<meta property="og:url" content="<%= current_url %>" />
		<% if @visualization && @visualization.visual_file_name %>
			<meta property="og:image" content="<%= full_url(@visualization.visual.url(:thumb, false)) %>" />
		<% end %>
		<meta property="og:site_name" content="<%= t('app.common.app_name') %>" />

    <title><%= content_for?(:title) ? "#{yield(:title)} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>

		<%= yield(:head) %>
  </head>
  <body>
		<!-- facebook comments -->
		<div id="fb-root"></div>

    <div id="frozen-menu">
      <div class="brand">
        <%= link_to(image_tag('logo.png'), root_path(:locale => I18n.locale))%>
      </div>

      <ul class="nav-menu">
        <li class="<%= assign_active_class(visuals_path)%>"><%= link_to t('.menu_visual'), visuals_path  %></li>
        <li class="<%#= assign_active_class(about_path)%>"><%= link_to t('.menu_idea'), "#"  %></li>
        <li class="<%= assign_active_class(submit_visual_path)%>"><%= link_to t('.menu_submit_visual'), submit_visual_path  %></li>
        <li class="<%= assign_active_class(data_path)%>"><%= link_to t('.menu_data'), data_path  %></li>
        <li class="<%= assign_active_class(about_path)%>"><%= link_to t('.menu_about'), about_path  %></li>
        <li class="<%= assign_active_class(contact_path)%>"><%= link_to t('.menu_contact'), contact_path  %></li>
      </ul>

      <ul class="user-menu">
        <% if user_signed_in? %>
	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                <%= current_user.email %>
	                <b class="caret"></b>
	          </a>
	          <ul class="dropdown-menu">
							<% current_user.organizations.each do |org| %>
					      <li>
		 		         <%= link_to t('helpers.links.org_profile', :org => org.name),
											organization_path(org.permalink) %>
								</li>
					      <li>
		 		         <%= link_to t('helpers.links.new_visual', :org => org.name),
											new_organization_visualization_path(org.permalink) %>
								</li>
							<% end %>
			        <li>
	 		         <%= link_to t('.notifications'), notifications_path %>
							</li>
							<% if current_user.role?(User::ROLES[:admin]) %>
					      <li>
		 		         <%= link_to t('.admin'), admin_path %>
								</li>
							<% end %>
			        <li>
	 		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
							</li>
	          </ul>
	        </li>
				<% else %>
					<li>
						<%= link_to t('helpers.links.sign_in'), :new_user_session, :class => 'fancybox' %>
					</li>
        <% end %>
      </ul>

      <ul id="follow-us">
        <input type="text" class="search" placeholder="Search" />
        <div class="clear">
          <li><a class="fb" title="<%= t('.facebook') %>" href="#"></a></li>
          <li><a class="twitter" title="<%= t('.twitter') %>" href="#"></a></li>
          <li><a class="pinterest" title="<%= t('.pinterest') %>" href="#"></a></li>
				  <li><%= link_to "", visuals_path(:format => :atom), :class => 'rss', :title => t('.rss') %></li>
				  <li><%= link_to "", notifications_path, :class => 'mail', :title => t('.mail') %></li>
				</div>
      </ul>

    </div>

    <div id="everything-else">

      <div class="stretch">

        <div class="navbar def">
          <div class="navbar-inner resp">
            <div id="locale-c">
              <ul>
		            <% I18n.available_locales.each do |locale| %>
			            <% if locale != I18n.locale %>
								    <li><%= generate_language_switcher_link(locale) %></li>
			            <% end %>
		            <% end %>
		          </ul>
            </div>
          </div>
        </div>

		    <div id="wrapper">
		      <div class="container-fluid resp">
		        <div class="content">
		          <div class="row-fluid">
		            <div class="span12">
							    <% flash.each do |key, msg| %>
								    <div class="alert <%= flash_translation(key) %> fade in">
									    <a href="#" data-dismiss="alert" class="close">Ã—</a>
									    <%= msg %>
								    </div>
							    <% end %>

	                <%= yield %>
	              </div><!--/span-->
		          </div><!--/row-->
		        </div><!--/content-->
		       </div> <!-- /container -->
		    </div><!--/wrapper-->

		  </div>

      <div class="push"><!--//--></div>

      <footer class="clear resp">
			  <div id="left">&copy; 2012</div>
		    <div id="middle">
				  <%= link_to t('.terms'), terms_path %>
			  </div>
			  <div id="right" class="clear">
				  <ul>
					  <li id="js_link_text">
						  <%= t(".js_link_text") %>:
					  </li>
					  <li id="js_logo">
						  <%= link_to(image_tag("jumpstart-logo.png"), "http://www.jumpstart.ge", :target => "_blank",
								  :title => t(".js_link_title")	) %>
					  </li>
				  </ul>
			  </div>
      </footer>

    </div><!--#everything-else-->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

		<% if Rails.env.production? %>
			<!-- insert google analytics for production site here -->
		<% elsif Rails.env.staging? %>
			<!-- insert google analytics for staging site here -->
		<% end %>

  </body>
</html>
