<% @visualizations = [] if !@visualizations.present? %>

  <% if !@ajax_call %>
    <div class="grid_items clear">
  <% end %>
    <!--<div class="grid_visualization_row clear">-->

    <div id="throbber">
      <img src="/assets/throbber.svg" />
    </div>

  	<% @visualizations.each_with_index do |visualization, index| %>

  		  <div class="grid_visualization_item">
  		    <div class="visual">
  		       <%  if !visualization.image_file_name.blank? %>
    		      <%= link_to(image_tag(visualization.image.url(:thumb, false)), 
                    visualization_path(visualization.permalink), 
                    :title => visualization.title) %>
  		      <% else %>
    		      <%= link_to(image_tag('image_placeholder.png'), 
                    visualization_path(visualization.permalink), 
                    :title => visualization.title) %>
  		      <% end %>
  		    </div>
  		    <div class="title">
  		      <h2><%= link_to visualization.title, visualization_path(visualization.permalink), :title => visualization.title %></h2>
  					<% if !visualization.published %>
  					<div class="not_published"><%= t('app.common.not_published') %></div>
  					<% end %>
  					<div class="item_footer clear">
              <ul>
                <li>
                  <span class="heart" title="<%= t('filters.visuals.organize.likes')%>">‚ù§</span>
                  <%= visualization.overall_votes %>
                </li>
                <li>
                  <%= image_tag('view_icon12.png', :alt => t('filters.visuals.organize.views'), :title => t('filters.visuals.organize.views')) %>
                  <%= visualization.impressions_count %>
                </li>
                <li>
                  <%= image_tag('comments_icon12.png', :alt => t('app.common.comments'), :title => t('app.common.comments')) %>
                  <%= visualization.fb_count %>
                </li>
              </ul>
  					</div>
  					<% if @user_in_org && current_user.role?(User::ROLES[:org_admin]) && params[:organization].present? %>
  						<div>
  					    <%= link_to t('.edit', :default => t("helpers.links.edit")),
					                  edit_visualization_path(:id => visualization.permalink, :organization => params[:organization]),
													  :class => 'btn btn-mini' %>
					      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
					                  visualization_path(:id => visualization.permalink, :organization => params[:organization]),
  					                :method => :delete,
  													:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
  					                :class => 'btn btn-mini btn-danger' %>
  						</div>
  					<% end %>
  		    </div>
  		  </div>

  		<% if false && (index + 1) % 4 == 0 %>
  		  </div>
        <div class="grid_visualization_row clear">
  		<% end %>
  	<% end %>
  	<!--</div>-->

  <% if !@ajax_call %>
    </div>
  <% end %>


