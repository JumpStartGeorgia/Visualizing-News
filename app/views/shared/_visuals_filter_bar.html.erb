<%
  show_toggle ||= false
  hide_slider = show_toggle ? "display: none;" : ""
hide_slider = ''
%>
<div id="filter_bar" class="navbar">

  <% if show_toggle %>
    <div id="toggle_categories" class="resp">
      <%= t('.categories')%>
      <br />
      <%= image_tag('org_downarrow.png', :id => "category_arrow")%>
    </div>
  <% end %>


  <div id="category_slider" style="<%=hide_slider%>">

    <ul id="category_slider_content" class="elastislide-list">
      <% @categories.each do |cat| %>
        <% if cat.icon_file_name %>
          <li>
            <%= link_to(url_for(params.merge(:category => cat.permalink)),
              :'data-path' => cat.icon.url,
              :title => cat.name) do %>
              <%= image_tag(cat.icon.url) %>
              <div class="slider_text">
                <%= cat.name %>
              </div>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>

  </div>

  <div id="filter_bar_inner" class="container">
		<ul class="nav">
			<li class="dropdown">
				<a id="filter_type" class="dropdown-toggle" data-toggle="dropdown" href="#">
					<%= t('filters.visuals.type.header')%>:
					<span id="filter_type_selection" class="filter_selection"><%=@visuals_filter_type_selection%></span>
	        <b class="caret"></b>
				</a>
				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
					<li>
						<%= link_to t('filters.visuals.type.all'), url_for(params.merge(:type => 'all')) %>
					</li>
					<li>
						<%= link_to t('filters.visuals.type.infographic'), url_for(params.merge(:type => 'infographic')) %>
					</li>
					<li>
						<%= link_to t('filters.visuals.type.interactive'), url_for(params.merge(:type => 'interactive')) %>
					</li>
				</ul>
			</li>
			<li class="dropdown">
				<a id="filter_organize" class="dropdown-toggle" data-toggle="dropdown" href="#">
					<%= t('filters.visuals.organize.header')%>:
					<span id="filter_organize_selection" class="filter_selection"><%=@visuals_filter_organize_selection%></span>
	        <b class="caret"></b>
				</a>
				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
					<li>
						<%= link_to t('filters.visuals.organize.recent'), url_for(params.merge(:organize => 'recent')) %>
					</li>
					<li>
						<%= link_to t('filters.visuals.organize.likes'), url_for(params.merge(:organize => 'likes')) %>
					</li>
					<li>
						<%= link_to t('filters.visuals.organize.views'), url_for(params.merge(:organize => 'views')) %>
					</li>
				</ul>
			</li>
			<li class="dropdown">
				<a id="filter_view" class="dropdown-toggle" data-toggle="dropdown" href="#">
					<%= t('filters.visuals.view.header')%>:
					<span id="filter_view_selection" class="filter_selection"><%=@visuals_filter_view_selection%></span>
	        <b class="caret"></b>
				</a>
				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
					<li>
						<%= link_to t('filters.visuals.view.grid'), url_for(params.merge(:view => 'grid')) %>
					</li>
					<li>
						<%= link_to t('filters.visuals.view.list'), url_for(params.merge(:view => 'list')) %>
					</li>
				</ul>
			</li>
      <li id="visual_search">
        <%= form_tag visuals_path(@param_options), :method => :get, :class => "form-search", :id => 'visuals_form_search' do %>
          <%= text_field_tag :q, params[:q], :class => 'input-large'%>
          <%= button_tag t('app.common.search'), :class => 'btn' %>
        <% end %>
      </li>
		</ul>
	</div>
</div>
