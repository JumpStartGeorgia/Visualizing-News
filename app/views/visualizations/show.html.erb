<% if user_signed_in? && current_user.role?(User::ROLES[:org_admin]) && params[:view] != 'interactive' && ((@user_in_org && params[:organization].present?) || (@visualization.organization_id.present? && current_user.organization_ids.present? && current_user.organization_ids.index(@visualization.organization_id))) %>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                visualizations_path(@param_options), :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_visualization_path(@visualization.permalink, :organization => params[:organization]), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                visualization_path(@visualization.permalink, :organization => params[:organization]),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                :class => 'btn btn-danger' %>
  </div>
<% end %>

<%= render @view_type %>
