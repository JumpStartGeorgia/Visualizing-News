if (<%= @visualizations && !@visualizations.empty? %>)
{
  $('div.grid_items').append($("<%= escape_javascript(render @view_type)%>").hide()).find('[class*="visualization_item"]').slideDown('slow');
  $('#load_more_link').show().replaceWith("<%= escape_javascript(link_to_next_page(@visualizations, t('helpers.links.more'), :remote => true, :id=>'load_more_link', :params => {:view => params[:view], :screen_w => params[:screen_w]}))%>");
}
else
{
  $('div.grid_items').parent().append('<div id="no_records"><%= t("app.msgs.no_visual_records")%></div>');
}
