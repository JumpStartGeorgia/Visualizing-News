<%= page_title t('.title') %>


<%= form_tag(notifications_path) do %>
	<h3><%= t('.all_sub_title') %></h3>
	<div class="row" style="margin-bottom: 15px;">
		<div class="span12">
			<%= t('.all_label') %>
			<label for="enable_notifications_true" class="radio">
				<%= radio_button_tag 'enable_notifications', 'true', @enable_notifications %>
				<%= t('.all_yes') %>
			</label>
			<label for="enable_notifications_false" class="radio">
				<%= radio_button_tag 'enable_notifications', 'false', !@enable_notifications %>
				<%= t('.all_no') %>
			</label>
		</div>
	</div>


	<h3><%= t('.new_ideas_sub_title') %></h3>
	<div class="row <%= @enable_notifications ? 'enable_notifications' : 'disable_notifications'%>" id="new_idea_notifications">
		<div class="span3">
			<label for="all" class="checkbox">
				<%= check_box_tag 'all', 'true', @all %>
				<%= t('.new_ideas_all') %>
			</label>
		</div>
		<div class="span3">
			<label for="categories">
				<%= t('.new_ideas_by_category') %>
				<br />
				<%= select_tag "categories",
						options_from_collection_for_select(@categories, "id", "name", @notifications.map{|x| x.identifier}),
						:multiple => true %>
			</label>
		</div>
		<div class="span2">
			<label for="none" class="checkbox">
				<%= check_box_tag 'none', 'true', @none %>
				<%= t('.new_ideas_none') %>
			</label>
		</div>
	</div>
	<div>
		<%= submit_tag nil, :class => 'btn btn-mini' %>
	</div>
<% end %>
