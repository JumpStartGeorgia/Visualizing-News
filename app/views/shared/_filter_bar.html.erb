    <ul id="category_slider_content" class="elastislide-list">
      <% @categories.each do |cat| %>
        <% if cat.icon_file_name %>
          <li>
            <%= link_to(url_for(params.merge(:category => cat.permalink)), 
              :'data-path' => cat.icon.url,
              :title => cat.name) do %>
              <%= image_tag(cat.icon.url) %>
              <div class="slider_text">
                <%= cat.name %>
              </div>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>

  </div>
  <div id="filter_bar_inner" class="container">
		<ul class="nav">
			<li class="dropdown">
				<a id="filter_type" class="dropdown-toggle" data-toggle="dropdown" href="#">
					<%= t('filters.type.header')%>:
					<span id="filter_type_selection" class="filter_selection"><%=@filter_type_selection%></span>
	        <b class="caret"></b>
				</a>
				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
					<li>
						<%= link_to t('filters.type.all'), url_for(params.merge(:type => 'all')) %>
					</li>
					<li>
						<%= link_to t('filters.type.infographic'), url_for(params.merge(:type => 'infographic')) %>
					</li>
					<li>
						<%= link_to t('filters.type.interactive'), url_for(params.merge(:type => 'interactive')) %>
					</li>
				</ul>
			</li>
			<li class="dropdown">
				<a id="filter_view" class="dropdown-toggle" data-toggle="dropdown" href="#">
					<%= t('filters.view.header')%>:
					<span id="filter_view_selection" class="filter_selection"><%=@filter_view_selection%></span>
	        <b class="caret"></b>
				</a>
				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
					<li>
						<%= link_to t('filters.view.grid'), url_for(params.merge(:view => 'grid')) %>
					</li>
					<li>
						<%= link_to t('filters.view.list'), url_for(params.merge(:view => 'list')) %>
					</li>
				</ul>
			</li>
		</ul>
	</div>
</div>
