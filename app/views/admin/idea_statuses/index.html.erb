<%- model_class = IdeaStatus -%>
<%- model_class_trans = IdeaStatusTranslation -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class_trans.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:sort) %></th>
      <th><%= model_class.human_attribute_name(:is_published) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @idea_statuses.each do |idea_status| %>
      <tr>
        <td><%= link_to idea_status.name, admin_idea_status_path(idea_status) %></td>
        <td><%= idea_status.sort %></td>
        <td><%= idea_status.is_published %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_idea_status_path(idea_status), :class => 'btn btn-mini' %>
    			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
											admin_idea_status_path(idea_status),
											:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
											:method => :delete,
											:class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
	<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_idea_status_path,
            :class => 'btn btn-primary' %>
	<%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn' %>
</div>
