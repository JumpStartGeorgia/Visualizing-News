<%- model_class = User -%>
<% title t('helpers.links.sign_in') %>

<div class="row">
	<div class="span4">
		<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<%= f.input :email, :input_html => { :size => 35 } %>
			<%= f.input :password, :input_html => { :size => 35 } %>
			<% if devise_mapping.rememberable? -%>
				<div class="control-group">
					<label class="checkbox">
						<%= f.check_box :remember_me %> <%= model_class.human_attribute_name(:remember_me) %>
					</label>
				</div>
			<% end -%>


			<div class="control-group">
				<%= f.submit t('helpers.links.sign_in'), :class => 'btn' %>
			</div>
		<% end %>

		<div class="control-group">
			<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
				<%= link_to t('helpers.links.forgot_password'), new_password_path(resource_name), :class => 'btn btn-mini fancybox-nested' %>
			<% end -%>

			<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
				<%= link_to t('helpers.links.sign_up'), new_registration_path(resource_name), :class => 'btn btn-mini fancybox-nested' %>
			<% end -%>
		</div>

	</div>
	<div class="span4">
		<%- if devise_mapping.omniauthable? %>
			<%- resource_class.omniauth_providers.each do |provider| %>
				<%= link_to t('helpers.links.sign_in_provider', :provider => provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), :class => 'btn btn-primary' %>
			<% end -%>
		<% end -%>
	</div>
</div>
