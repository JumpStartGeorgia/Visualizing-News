<%= page_title t('.title') %>

<% if @email_sent %>

<p>
<%= t(".message_sent") %>
</p>

<% else %>

  <div>
    <%= mail_to "feedback@jumpstart.ge", nil, :encode => "hex", :subject => t('.email_subject'),
      :title => t('.email_us')%>
    <br />
    +995 032 214 29 26
    <br />
    <a href="http://mapspot.ge/?lt=41.697952843518&lg=44.796804273637&z=18&m=1&mlg=44.796804273637&mlt=41.697952843518" target="_blank" title="<%= t('.address_map')%>">#5 Shevchenko St, Apt 2 </a>
    <hr />
  </div>

	<%= semantic_form_for @message, :url => contact_path do |f| %>
		<%= f.error_messages %>

		<%= f.inputs do %>
			<%= f.input :name, :label => t(".name") %>
			<%= f.input :email, :label => t(".email") %>
			<%= f.input :message, :label => t(".message"), :as => :text, :input_html => {:rows => 5} %>
		<% end %>

  	<div>
  	  <%= f.submit t(".send"), :class => 'btn' %>
  	</div>

	<% end %>
<% end %>
