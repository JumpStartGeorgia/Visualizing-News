<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

		<meta property="og:title" content="<%= content_for?(:title) ? "#{yield(:title)} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %>" />
		<% if @visualization && @visualization.id && !@visualization.explanation.blank? %>
  		<meta property="og:description" content="<%= @visualization.explanation%>" />
    <% end %>
		<meta property="og:type" content="non_profit" />
		<meta property="og:url" content="<%= current_url %>" />
		<% if @visualization && @visualization.id && !@visualization.image_file_name.blank? %>
			<meta property="og:image" content="<%= full_url(@visualization.image.url(:thumb, false)) %>" />
    <% else %>
			<meta property="og:image" content="<%= full_url(image_path('logo.png')) %>" />
		<% end %>
		<meta property="og:site_name" content="<%= t('app.common.app_name') %>" />

    <title><%= content_for?(:title) ? "#{yield(:title)} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "fonts_#{I18n.locale}", :media => "all" %>
		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!--[if gte IE 9]>
      <style type="text/css">
        .gradient {
           filter: none;
        }
      </style>
    <![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>

		<%= yield(:head) %>
  </head>
  <body>
		<!-- facebook comments -->
		<div id="fb-root"></div>

    <div id="frozen-menu">
      <div class="brand">
        <%= link_to(image_tag('logo.png', :alt => t('app.common.app_name')),
					root_path(:locale => I18n.locale),
					:title => t('app.common.app_name'))%>
      </div>

      <ul class="nav-menu">
        <li><%= link_to t('.menu_visual'), visuals_path(remove_unwanted_params(@param_options, ['user_id', 'q'])), :class => assign_active_class(visuals_path) %></li>
		<% if !Rails.env.production? %>
        <li><%= link_to t('.menu_idea'), ideas_path(remove_unwanted_params(@param_options, ['user_id', 'q'])), :class => assign_active_class(ideas_path) %></li>
    <% end %>
        <li><%= link_to t('.menu_submit_visual'), submit_visual_path, :class => assign_active_class(submit_visual_path)  %></li>
        <li><%= link_to t('.menu_data'), data_path, :class => assign_active_class(data_path)  %></li>
        <li><%= link_to t('.menu_about'), about_path, :class => assign_active_class(about_path)  %></li>
        <li><%= link_to t('.menu_contact'), contact_path, :class => assign_active_class(contact_path)  %></li>
      </ul>

      <ul class="user-menu">
        <% if user_signed_in? %>
	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                <%= current_user.email %>
	                <b class="caret"></b>
	          </a>
	          <ul class="dropdown-menu">
							<% current_user.organizations.each do |org| %>
					      <li>
		 		         <%= link_to t('helpers.links.org_profile', :org => org.name),
											organization_path(org.permalink) %>
								</li>
					      <li>
		 		         <%= link_to t('helpers.links.new_visual', :org => org.name),
											new_organization_visualization_path(org.permalink) %>
								</li>
							<% end %>
			        <li>
	 		         <%= link_to t('.notifications'), notifications_path %>
							</li>
							<% if current_user.role?(User::ROLES[:admin]) %>
					      <li>
		 		         <%= link_to t('.admin'), admin_path %>
								</li>
							<% end %>
			        <li>
	 		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
							</li>
	          </ul>
	        </li>
				<% else %>
					<li>
						<%= link_to t('helpers.links.sign_in2'), :new_user_session, :class => 'fancybox' %>
					</li>
        <% end %>
      </ul>

      <ul id="follow-us">
        <input type="text" class="search" placeholder="<%= t('.search')%>" id="menu-search" 
                data-path="<%= visuals_path %>"/>
        <div class="clear">
          <li><a class="fb" title="<%= t('.facebook') %>" href="http://www.facebook.com/feradi.info" target="_blank"></a></li>
          <li><a class="twitter" title="<%= t('.twitter') %>" href="http://twitter.com/feradi_info" target="_blank"></a></li>
          <li><a class="pinterest" title="<%= t('.pinterest') %>" href="http://pinterest.com/feradi/" target="_blank"></a></li>
				  <li><%= link_to "", visuals_path(:format => :atom), :class => 'rss', :title => t('.rss') %></li>
				  <li><%= link_to "", notifications_path, :class => 'mail', :title => t('.notifications') %></li>
				</div>
      </ul>

    </div>

    <div id="everything-else">

      <div class="stretch">

        <div class="navbar def">
          <div class="navbar-inner">
            <div id="locale-c">
              <ul>
		            <% I18n.available_locales.each do |locale| %>
			            <% if locale != I18n.locale %>
								    <li><%= generate_language_switcher_link(locale) %></li>
			            <% end %>
		            <% end %>
		          </ul>
            </div>
          </div>
        </div>

		    <div id="wrapper">
		      <div class="container-fluid">
		        <div class="content">
		          <div class="row-fluid">
		            <div class="span12">
							    <% flash.each do |key, msg| %>
								    <div class="alert <%= flash_translation(key) %> fade in">
									    <a href="#" data-dismiss="alert" class="close">Ã—</a>
									    <%= msg %>
								    </div>
							    <% end %>

	                <%= yield %>
	              </div><!--/span-->
		          </div><!--/row-->
		        </div><!--/content-->
		       </div> <!-- /container -->
		    </div><!--/wrapper-->

		  </div>

      <div class="push"><!--//--></div>

      <footer class="clear">
        <div class="gradient clear"></div>
			  <div id="left">&copy; 2012</div>
		    <div id="middle">
				  <%# link_to t('.terms'), terms_path %>
			  </div>
			  <div id="right" class="clear">
				  <ul>
					  <!--li id="js_link_text">
						  <%= t(".js_link_text") %>:
					  </li-->
					  <li id="js_logo">
						  <%= link_to(image_tag("jumpstart-logo.png"), "http://www.jumpstart.ge", :target => "_blank",
								  :title => t(".js_link_title")	) %>
							<div><img src="/assets/logo-wheel.png" /></div>
					  </li>
				  </ul>
			  </div>
      </footer>

    </div><!--#everything-else-->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

		<% if Rails.env.production? %>
			<!-- insert google analytics for production site here -->
			<script type="text/javascript">
				var _gaq = _gaq || [];
				_gaq.push(['_setAccount', 'UA-12801815-12']);
				_gaq.push(['_trackPageview']);
				(function() {
					var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
					ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
					var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
				})();
			</script>
		<% elsif Rails.env.staging? %>
			<!-- insert google analytics for staging site here -->
		<% end %>

  </body>
</html>
