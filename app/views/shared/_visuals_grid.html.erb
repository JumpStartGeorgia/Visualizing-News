<% @visualizations = [] if !@visualizations || @visualizations.empty?%>

  <% if !@ajax_call %>
    <div class="grid_items clear">
  <% end %>
    <!--<div class="grid_visualization_row clear">-->
    <img src="/assets/throbber.svg" id="throbber" />
  	<% @visualizations.each_with_index do |visualization, index| %>

  		  <div class="grid_visualization_item">
  		    <div class="visual">
  		       <%  if !visualization.image_file_name.blank? %>
    		      <%= link_to(image_tag(visualization.image.url(:thumb, false)), 
                    create_visual_path(visualization.permalink, @user_in_org, organization_id=params[:id]), 
                    :title => visualization.title) %>
  		      <% else %>
    		      <%= link_to(image_tag('image_placeholder.png'), 
                    create_visual_path(visualization.permalink, @user_in_org, organization_id=params[:id], 
                    :title => visualization.title)) %>
  		      <% end %>
  		    </div>
  		    <div class="title">
  		      <h2><%= link_to visualization.title, create_visual_path(visualization.permalink, @user_in_org, organization_id=params[:id]), :title => visualization.title %></h2>
  					<% if !visualization.published %>
  					<div class="not_published"><%= t('app.common.not_published') %></div>
  					<% end %>
  					<div class="item_footer clear">
              <ul>
                <li>
                  <span class="heart" title="<%= t('filters.visuals.organize.likes')%>">‚ù§</span>
                  <%= visualization.overall_votes %>
                </li>
                <li>
                  <%= image_tag('view_icon12.png', :alt => t('filters.visuals.organize.views'), :title => t('filters.visuals.organize.views')) %>
                  <%= visualization.impressions_count %>
                </li>
                <li>
                  <%= image_tag('comments_icon12.png', :alt => t('app.common.comments'), :title => t('app.common.comments')) %>
                  <%= visualization.fb_count %>
                </li>
              </ul>
  					</div>
  					<% if @user_in_org && current_user.role?(User::ROLES[:org_admin]) && params[:controller] == 'organizations' %>
  						<div>
  					    <%= link_to t('.edit', :default => t("helpers.links.edit")),
  					                edit_organization_visualization_path(params[:id], visualization.permalink),
  													:class => 'btn btn-mini' %>
  					    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  					                organization_visualization_path(params[:id], visualization.permalink),
  					                :method => :delete,
  													:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
  					                :class => 'btn btn-mini btn-danger' %>
  						</div>
  					<% end %>
  		    </div>
  		  </div>

  		<% if false && (index + 1) % 4 == 0 %>
  		  </div>
        <div class="grid_visualization_row clear">
  		<% end %>
  	<% end %>
  	<!--</div>-->

  <% if !@ajax_call %>
    </div>
  <% end %>


<% if false %>
  <div id="no_records">
    <%= t('app.msgs.no_visual_records')%>
  </div>
<% end %>
