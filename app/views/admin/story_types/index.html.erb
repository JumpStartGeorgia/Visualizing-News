<%- model_class = StoryType -%>
<%- model_class_trans = StoryTypeTranslation -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class_trans.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @story_types.each do |story_type| %>
      <tr>
        <td><%= link_to story_type.name, admin_story_type_path(story_type) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_story_type_path(story_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_story_type_path(story_type),
                      :method => :delete,
											:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
	<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_story_type_path,
            :class => 'btn btn-primary' %>
	<%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn' %>
</div>
