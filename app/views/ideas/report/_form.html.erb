	<%= semantic_form_for([:ideas, @report], :url => :ideas_report_inappropriate, :remote => true) do |f| %>
		<%= f.error_messages %>
		<%= f.inputs do %>
			<%= f.hidden_field :idea_id, :value => params[:idea_id] %>

			<% if user_signed_in? %>
				<%= f.hidden_field :user_id, :value => current_user.id %>
			<% end %>

			<%= f.input :reason, :input_html => {:size => 75} %>

		<% end %>

		<%= f.submit nil, :class => 'btn btn-primary' %>
	<% end %>





